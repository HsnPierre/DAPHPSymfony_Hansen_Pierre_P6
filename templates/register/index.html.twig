{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body_id 'register_body' %}

{% block body %}

    <section id="register">
            <h2 class="text-center mt-0">Inscription</h2>
            <hr class="divider my-4" />
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'container'}}) }}
                <div class="row row-cols-2">
                    {{ form_row(form.name, {'class': 'col'}) }}
                    {{ form_row(form.surname, {'class': 'col'}) }}
                </div>
                <div class="row row-cols-1">
                    {{ form_row(form.username, {'class': 'col'}) }}
                    {{ form_row(form.mail, {'class': 'col'}) }}
                    {{ form_row(form.password, {'class': 'col'}) }}
                </div>
                
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                </div>
            {{ form_end(form) }}
    </section>
{% endblock %}
